service {
  id = "docker/monitoring"
  name = "cAdvisor"
  tags = [
  "docker-monitoring"
  ]
  port = <%= node['hops']['cadvisor']['port']  %>
  check = {
    id = "cadvisor-check"
    name = "Health check for cAdvisor"
    http = "http://localhost:<%= node['hops']['cadvisor']['port'] %>/metrics"
    interval = "20s"
    timeout = "20s"
    status = "passing"
  }
}